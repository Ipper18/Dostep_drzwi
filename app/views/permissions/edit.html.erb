<h1>Edit Permission</h1>

<%= form_with(model: @permission, local: true) do |form| %>
  <% if @permission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@permission.errors.count, "error") %> prohibited this permission from being saved:</h2>

      <ul>
      <% @permission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Wybór karty -->
  <div class="field">
    <%= form.label :card_id, 'Card' %>
    <%= form.collection_select :card_id, Card.all, :id, :id, include_blank: true %>
  </div>

  <!-- Wybór pokoi -->
  <div class="field">
    <%= form.label :room_ids, 'Rooms' %>
    <%= form.collection_select :room_ids, Room.all, :id, :room_name, { include_blank: false }, { multiple: true, size: 5 } %>
  </div>

  <!-- Data ważności uprawnienia -->
  <div class="field">
    <%= form.label :valid_from %>
    <%= form.date_select :valid_from %>
  </div>

  <div class="field">
    <%= form.label :valid_to %>
    <%= form.date_select :valid_to %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Permissions', permissions_path %>
