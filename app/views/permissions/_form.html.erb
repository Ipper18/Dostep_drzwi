<%= form_with(model: permission) do |form| %>
  <% if permission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(permission.errors.count, "error") %> prohibited this permission from being saved:</h2>

      <ul>
        <% permission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :card_id, 'Numer Karty' %>
    <%= form.collection_select :card_id, Card.all, :id, :id, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :room_ids, 'Pokoje' %>
    <%= form.collection_select :room_ids, Room.all, :id, :room_name, {}, { multiple: true, size: 6 } %>
  </div>

  <div class="field">
    <%= form.label :valid_from %>
    <%= form.date_select :valid_from %>
  </div>

  <div class="field">
    <%= form.label :valid_to %>
    <%= form.date_select :valid_to %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
