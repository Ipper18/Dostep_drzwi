<h1>Edytuj Kartę</h1>

<%= form_with(model: @card, local: true) do |form| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% @card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     <%= form.label :card_id, 'Numer ID Karty' %>
     <%= form.text_field :card_id, readonly: true, value: @card.id %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :user_name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['nieaktywna', 'zablokowana', 'aktywna'] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Powrót', cards_path %>
