<h1>Cards List</h1>
<table>
  <tr>
    <th>Nazwa użytkownika</th>
    <th>Status</th>
    <th colspan="3">Akcje</th>
  </tr>

  <% @cards.each do |card| %>
    <tr>
      <td><%= card.user.user_name %></td> <!-- Założono, że istnieje metoda user_name w modelu User -->
      <td><%= card.status %></td>
      <td><%= link_to 'Show', card %></td>
      <td><%= link_to 'Edit', edit_card_path(card) %></td>
      <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć tę kartę?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Card', new_card_path, class: 'btn btn-primary' %>

<div>
  <%= link_to 'Powrót do Panelu Sterowania', dashboard_path, class: 'btn btn-primary' %>
</div>
